<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="inventarisVm"
            type="org.d3if0067.z_inventory.ui.normalinventory.NormalViewModel" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".ui.normalinventory.NormalInventory">

        <ProgressBar
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:indeterminateTint="@color/colorProgressBar"
            android:visibility="visible"
            app:layout_constraintBottom_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="parent"
            app:showLoading="@{inventarisVm.loading}"
            tools:layout_editor_absoluteY="342dp" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rv_normal_inventory"
            android:layout_width="409dp"
            android:layout_height="553dp"
            android:layout_marginBottom="32dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            tools:listitem="@layout/recylerview_normal_inventory" />


    </androidx.constraintlayout.widget.ConstraintLayout>

</layout>